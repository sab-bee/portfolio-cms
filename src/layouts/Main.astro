---
import Head from "./Head.astro";
import "../styles/global.css";

const { title = "Portfolio", description = "Sadia Afrin's portfolio" } = Astro.props;
---

<Head {title} {description} />
<body>
  <div id="wrapper">
    <div id="cursor"></div>
  </div>
  <main id="main" class="border-2 border-black m-3 w-[75%] mx-auto bg-primary">
    <slot />
  </main>
</body>

<style>
  #cursor {
    width: 50px;
    height: 50px;
    border-radius: 100%;
    border: 1px solid black;
    background-color: #e9e9e66b;
    position: fixed;
    pointer-events: none;
    left: 0;
    top: 0;
    transform: translate(calc(-50% + 15px), -50%);
    z-index: 2;
    transition: all 0.2s ease-out;
  }
</style>

<script>
  // import Lenis from "@studio-freight/lenis";
  // const lenis = new Lenis({
  //   duration: 1.4,
  //   easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t))
  // });

  // function raf(time) {
  //   lenis.raf(time);
  //   requestAnimationFrame(raf);
  // }

  // requestAnimationFrame(raf);

  const cursor = document.getElementById("cursor");
  const cursorStyle = cursor.style;

  document.addEventListener("mousemove", (e) => {
    cursorStyle.transform = `translate3d(calc(${e.clientX}px - 50%), calc(${e.clientY}px - 50%), 0)`;
  });
</script>
