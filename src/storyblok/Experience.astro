---
import { storyblokEditable } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="">
  <div class="lg:flex border-b border-black justify-between items-center w-[96%] mx-auto">
    <h2 class="lg:text-[4vw] font-medium lg:font-normal m-0">EXPERIENCE</h2>
    <p class="lg:border border-black py-1 lg:px-2 rounded-full m-0">
      {blok.headline}
    </p>
  </div>
  <div class="flex flex-col lg:flex-row items-center lg:items-start">
    <div class="w-full lg:w-3/5 pr-6">
      {
        blok.container?.map((blok, i) => {
          return <StoryblokComponent blok={blok} counter={i} />;
        })
      }
    </div>
    <div>
      <img class="md:h-[500px] object-cover" src="images/experience.png" alt="" />
    </div>
  </div>
</section>
