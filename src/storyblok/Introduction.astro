---
import { renderRichText, storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
const renderAbout = renderRichText(blok.about);
---

<section
  {...storyblokEditable(blok)}
  class="border-b border-black py-8 flex flex-col lg:flex-row justify-between items-center w-[96%] mx-auto"
>
  <div class="space-y-4 w-full lg:w-[60%]">
    <h3 class="lg:text-[3vw] text-3xl font-medium m-0 mb-2">{blok.headline} {blok.name}</h3>
    <p class="lg:text-[2vw] text-2xl">{blok.title}</p>
    <div set:html={renderAbout} class="about" />
    <a class="ctaprimary mt-2" href={blok.resume.url} target={blok.resume.target}
      >checkout my resume</a
    >
  </div>

  <div class="">
    <img class="md:h-[500px] object-cover" src="images/dp.png" alt="" />
  </div>
</section>

<style>
  .about :global(a) {
    text-decoration: underline;
    font-weight: 500;
  }
</style>
