---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="py-8 grid items-center w-[96%] mx-auto min-h-[50vh]">
  <div class="w-full lg:w-[60%]">
    <h3 class="lg:text-[3vw] text-3xl font-medium m-0 text-primary">{blok.name}</h3>
    <p class="lg:text-[2vw] text-2xl m-0 lg:mt-6 mt-3 text-primary">{blok.title}</p>
    <p class="lg:text-justify ">{blok.about}</p>
    <a
      class="ctaprimary m-0 text-primary hover:bg-shade font-medium"
      href={blok.resume.url}
      target={blok.resume.target}>checkout my resume <span class="text-xl">â†—</span></a
    >
  </div>
</section>

<style>
  .about :global(a) {
    text-decoration: underline;
    font-weight: 500;
  }
</style>
