---
import { renderRichText, storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
const renderAbout = renderRichText(blok.about);
---

<section
  {...storyblokEditable(blok)}
  class="py-8 flex flex-col lg:flex-row justify-between items-center w-[96%] mx-auto"
>
  <div class="w-full lg:w-[60%]">
    <h3 class="lg:text-[3vw] text-3xl font-medium m-0 text-primary">{blok.name}</h3>
    <p class="lg:text-[2vw] text-2xl m-0 lg:mt-6 mt-3 text-second">{blok.title}</p>
    <div set:html={renderAbout} class="about" />
    <a class="ctaprimary m-0 text-primary" href={blok.resume.url} target={blok.resume.target}
      >checkout my resume <span class="text-xl">â†—</span></a
    >
  </div>

  <div class="">
    <img class="md:h-[300px] object-cover" src={blok.banner.filename} alt="" />
  </div>
</section>

<style>
  .about :global(a) {
    text-decoration: underline;
    font-weight: 500;
  }
</style>
