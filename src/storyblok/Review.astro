---
import { storyblokEditable } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import Headline from "../components/Headline.astro";

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="w-[96%] mx-auto">
  <div class="lg:flex border-b border-third justify-between items-center">
    <Headline class="lg:text-[4vw] font-medium lg:font-normal m-0">TESTIMONIAL</Headline>
    <p class="lg:border border-third py-1 lg:px-2 rounded-full m-0">{blok.headline}</p>
  </div>
  <div class="grid justify-center py-12">
    <div class="flex flex-col xl:flex-row justify-center overflow-hidden">
      {
        blok.container?.map((blok, i) => {
          return <StoryblokComponent blok={blok} counter={i} />;
        })
      }
    </div>
  </div>
</section>
