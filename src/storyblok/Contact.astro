---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="w-[96%] mx-auto border-black">
  <div class="lg:flex border-b border-black justify-between items-center">
    <h2 class="lg:text-[4vw] font-medium lg:font-normal m-0">CONTACT</h2>
    <p class="lg:border border-black py-1 lg:px-2 rounded-full m-0">{blok.headline}</p>
  </div>
  <div class="flex flex-col lg:flex-row items-center">
    <a
      class="text-center mt-2 block w-full py-4 px-6 border border-black hover:bg-shade transition-colors"
      href=`${blok.linkedin.url}`
      target={blok.linkedin.target}>linkedin</a
    >
    <a
      class="text-center mt-2 block w-full py-4 px-6 border-y border-transparent bg-dark text-white hover:bg-shade transition-colors hover:text-black hover:border-black"
      href=`mailto:${blok.email.url}`>say hello</a
    >
    <a
      class="text-center mt-2 block w-full py-4 px-6 border border-black hover:bg-shade transition-colors"
      href=`${blok.facebook.url}`
      target={blok.facebook.target}>facebook</a
    >
  </div>
</section>
