---
import { storyblokEditable } from "@storyblok/astro";
import Headline from "../components/Headline.astro";

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="w-[96%] mx-auto border-third">
  <div class="lg:flex border-b border-third justify-between items-center">
    <Headline class="lg:text-[4vw] font-medium lg:font-normal m-0">CONTACT</Headline>
    <p class="lg:border border-third py-1 lg:px-2 rounded-full m-0">{blok.headline}</p>
  </div>
  <div class="flex flex-col lg:flex-row items-center">
    <a
      class="text-center mt-2 block w-full py-4 px-6 border border-third hover:bg-shade transition-colors"
      href=`${blok.linkedin.url}`
      target={blok.linkedin.target}>linkedin</a
    >
    <a
      class="text-center mt-2 block w-full py-4 px-6 border-y border-transparent bg-dark text-white hover:bg-shade transition-colors hover:text-black hover:border-third"
      href=`mailto:${blok.email.url}`>say hello</a
    >
    <a
      class="text-center mt-2 block w-full py-4 px-6 border border-third hover:bg-shade transition-colors"
      href=`${blok.facebook.url}`
      target={blok.facebook.target}>facebook</a
    >
  </div>
</section>
