---
import { renderRichText, storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="border-b border-black w-[96%] mx-auto">
  <div class="lg:flex border-b border-black justify-between items-center">
    <h2 class="font-normal text-[4vw] m-0">ABOUT ME</h2>
    <p class="lg:border border-black py-1 lg:px-2 rounded-full m-0">{blok.headline}</p>
  </div>
  <div class="my-8 flex flex-col lg:flex-row items-center">
    <div>
      <img class="md:h-[500px] object-cover" src="../../assets/images/about.png" alt="" />
    </div>
    <div class="w-full lg:w-3/5 space-y-3">
      <p>{blok.para1}</p>
      <p>{blok.para2}</p>
      <p>{blok.para3}</p>
    </div>
  </div>
</section>
